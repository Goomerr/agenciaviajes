extends ./layout/index

block contenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        blockquote.text-center Lee sobre nuestros clientes y su experiencias. 
        include  ./layout/bloque_testimonios

        .row
            .col-md-12
                h2.d-block.w-100.text-center Cuéntanos tu Experiencia   
                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

                .row.justify-content-center.col
                    .col-md-8
                        form(action="/testimonios" method="POST")
                            .form-group 
                                label(for="nombre") Nombre
                                input#nombre(type="text" placeholder="Tu nombre" name="nombre" class="form-control" value = nombre )
                            .form-group 
                                label(for="correo") Correo Electrónico 
                                input#correo(type="email" placeholder="Tu E-mail" name="correo" class="form-control" value = correo)
                            .form-group 
                                label(for="mensaje") Mensaje
                                textarea#mensaje( placeholder="Tu Mensaje" name="mensaje" class="form-control" rows=3)= mensaje
                            input.btn.btn-success.btn-block.mb-5.mt-5(type="submit")